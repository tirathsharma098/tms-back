{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts", "*.ts"],
    "exclude": ["node_modules"]
}
